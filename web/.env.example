# Supabase project URL (public)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase publishable key (public client key)
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=sb_publishable_your_key_here

# Back-compat alias (optional): app supports either var name
NEXT_PUBLIC_SUPABASE_ANON_KEY=sb_publishable_your_key_here

# Supabase secret key (server-side only, never expose in browser)
SUPABASE_SECRET_KEY=sb_secret_your_key_here

# Back-compat alias (optional): app supports either var name
SUPABASE_SERVICE_ROLE_KEY=sb_secret_your_key_here

# Admin-only API key for Phase 2 moderation/revision endpoints
ADMIN_API_KEY=replace_with_a_long_random_secret

# Sentry error tracking (optional, recommended)
# Client DSN (safe for browser)
NEXT_PUBLIC_SENTRY_DSN=https://public@example.ingest.sentry.io/123456
# Server DSN (optional override; falls back to NEXT_PUBLIC_SENTRY_DSN)
SENTRY_DSN=https://public@example.ingest.sentry.io/123456
# Optional environment tag in Sentry (development|staging|production)
SENTRY_ENVIRONMENT=development
# Optional source-map upload settings for release debugging in Sentry
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug
SENTRY_AUTH_TOKEN=sntrys_your_token_here

# Postgres connection string for import pipeline
# Used by scripts/export_to_hosted.py (import/full mode)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require
