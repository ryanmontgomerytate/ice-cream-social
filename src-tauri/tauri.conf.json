{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ice Cream Social",
  "version": "1.0.0",
  "identifier": "com.icecreamsocial.app",
  "build": {
    "frontendDist": "../scripts/dashboard-react/dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "cd scripts/dashboard-react && npm run dev",
    "beforeBuildCommand": "cd scripts/dashboard-react && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Ice Cream Social",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/Desktop/Projects/ice-cream-social-app/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "2026 Ryan",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
