# Hosted Postgres connection string (Supabase)
DATABASE_URL=postgresql://postgres:your-password@db.your-project-ref.supabase.co:5432/postgres?sslmode=require

# Supabase API settings (used by web app and future hosted tooling)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
# Publishable key (new name)
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=sb_publishable_your_key_here
# Back-compat alias (optional)
NEXT_PUBLIC_SUPABASE_ANON_KEY=sb_publishable_your_key_here
# Secret key (new name) - server-side only
SUPABASE_SECRET_KEY=sb_secret_your_key_here
# Back-compat alias (optional)
SUPABASE_SERVICE_ROLE_KEY=sb_secret_your_key_here
